{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react", // 开启 jsx
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true, // 允许 ts 认识 JSON 文件
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["packages/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": false,
    "strictNullChecks": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ]
}
